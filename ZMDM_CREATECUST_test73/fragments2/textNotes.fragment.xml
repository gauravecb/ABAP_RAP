<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:tnt="sap.tnt">
	<VBox>
		<Panel expandable="true" expanded="false">
			<headerToolbar>
				<OverflowToolbar>
					<Label text="{i18n>TextNotes}" design="Bold"/>
				</OverflowToolbar>
			</headerToolbar>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="5" labelSpanM="8" labelSpanS="6" adjustLabelSpan="false"
				emptySpanL="0" emptySpanM="0" columnsL="3" columnsM="3">
				<f:content>
					<Table enableBusyIndicator="false" items="{SearchDisplayModelSet>/N_TextNotes}">
						<columns>
							<Column demandPopin="true" minScreenWidth="Tablet" width="30%">
								<Label text="{i18n>Level}"/>
							</Column>
							<Column demandPopin="true" minScreenWidth="Tablet" width="30%">
								<Label text="{i18n>Language}"/>
							</Column>
							<Column demandPopin="true" minScreenWidth="Tablet" width="30%">
								<Label text="{i18n>TextType}"/>
							</Column>
							<Column demandPopin="true" minScreenWidth="Tablet" width="40%">
								<Label text="{i18n>FreeText}"/>
							</Column>
							<Column demandPopin="true" minScreenWidth="Tablet" width="30%">
								<Label text=""/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<Input enabled="false" value="{SearchDisplayModelSet>TextLevel}"/>
								<Input enabled="false" value="{SearchDisplayModelSet>LanguageDesc}"/>
								<Input enabled="false" value="{SearchDisplayModelSet>TextType}"/>
								<Input enabled="false" value="{SearchDisplayModelSet>FirstLine}"/> 
								<Button  text="{i18n>DisplayFreeText}" enabled="{SearchDisplayModelSet>MultiLine}" press="onPressAddPopupTextNotes" width="100%" type="Accept"/>
							</ColumnListItem>
						</items>
					</Table>
				</f:content>
			</f:SimpleForm>
		</Panel>
		<Panel expandable="true" expanded="false">
			<headerToolbar>
				<OverflowToolbar>
					<Label text="{i18n>Classification}" design="Bold"/>
				</OverflowToolbar>
			</headerToolbar>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout">
				<f:content>
					<Table enableBusyIndicator="false" items="{SearchDisplayModelSet>/N_Classif}">
						<columns>
							<Column demandPopin="true" minScreenWidth="Tablet" width="30%">
								<Label text="{i18n>ClassificationType}"/>
							</Column>
							<Column demandPopin="true" minScreenWidth="Tablet" width="40%">
								<Label text="{i18n>Classification}"/>
							</Column>
							<Column demandPopin="true" minScreenWidth="Tablet" width="40%">
								<Label text="{i18n>Value}"/>
							</Column>
							<Column demandPopin="true" minScreenWidth="Tablet" width="30%">
								<Label text=""/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<Input enabled="false"
									value="{parts:[{path:'SearchDisplayModelSet>Klart'},{path:'SearchDisplayModelSet>ClassTypeDesc'}],formatter:'MDMZCUSTOMER.model.Formatter.codeValuePair'}"/>
								<Input enabled="false" value="{SearchDisplayModelSet>Class}"/>
								<Input enabled="false" value="{SearchDisplayModelSet>Atwtb}"/>
							</ColumnListItem>
						</items>
					</Table>
				</f:content>
			</f:SimpleForm>
		</Panel>
	</VBox>
</core:FragmentDefinition>