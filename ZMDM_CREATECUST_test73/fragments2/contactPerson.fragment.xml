<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:tnt="sap.tnt">
	<Panel expandable="true" expanded="false">
		<headerToolbar>
			<OverflowToolbar>
				<Label text="{i18n>ContactPersons}" design="Bold"/>
			</OverflowToolbar>
		</headerToolbar>
		<VBox items="{ContactPersonDisplayModelSet>/ContactPersons}">
			<f:SimpleForm visible="{ContactPersonDisplayModelSet>VisibleBasedOnNext}" class="editableForm" editable="true" layout="ResponsiveGridLayout"
				labelSpanL="5" labelSpanM="8" labelSpanS="6" adjustLabelSpan="false" emptySpanL="0" emptySpanM="0" columnsL="3" columnsM="3">
				<f:content>
					<core:Title/>
					<Label textAlign="Left" text="{i18n>LastName}" wrapping="true"/>
					<Input enabled="false" value="{ContactPersonDisplayModelSet>LastName}"/>
					<Label textAlign="Left" text="{i18n>Function}" wrapping="true"/>
					<Input enabled="false"
						value="{ContactPersonDisplayModelSet>FunctionDescription}"/>
					<Label textAlign="Left" text="{i18n>Telephone}" wrapping="true"/>
					<Input enabled="false" value="{ContactPersonDisplayModelSet>Telephone}"/>
					<Label textAlign="Left" text="{i18n>Fax}" wrapping="true"/>
					<Input enabled="false" value="{ContactPersonDisplayModelSet>Fax}"/>
					<Label textAlign="Left" text="{i18n>MobilePhone}" wrapping="true"/>
					<Input enabled="false" value="{ContactPersonDisplayModelSet>MobilePhone}"/>
					<Label textAlign="Left" text="{i18n>Email}" wrapping="true"/>
					<Input enabled="false" value="{ContactPersonDisplayModelSet>Email}"/>
					<Label textAlign="Left" text="{i18n>Method}" wrapping="true"/>
					<Input enabled="false" value="{ContactPersonDisplayModelSet>Method}"/>
					<core:Title/>
					<Label textAlign="Left" text="{i18n>FirstName}" wrapping="true"/>
					<Input enabled="false" value="{ContactPersonDisplayModelSet>FirstName}"/>
					<Label textAlign="Left" text="{i18n>Department}" wrapping="true"/>
				<Input enabled="false"
						value="{ContactPersonDisplayModelSet>DepartmentDescription}"/>
					<Label textAlign="Left" text="{i18n>TelephoneExtension}" wrapping="true"/>
					<Input enabled="false" value="{ContactPersonDisplayModelSet>TelephoneExtension}"/>
					<Label textAlign="Left" text="{i18n>FaxExtension}" wrapping="true"/>
					<Input enabled="false" value="{ContactPersonDisplayModelSet>FaxExtension}"/>
					<Label/><Text/>
					<Label/><Text/>
					<Label textAlign="Left" text="{i18n>Notes}" wrapping="true"/>
					<Input enabled="false" value="{ContactPersonDisplayModelSet>Notes}"/>
					<core:Title/>
					<Label textAlign="Left" text="{i18n>Language}" wrapping="true"/>
						<Input enabled="false" 	value="{parts:[{path:'ContactPersonDisplayModelSet>Language'},{path:'ContactPersonDisplayModelSet>LanguageDesc'}],formatter:'MDMZCUSTOMER.model.Formatter.codeValuePair'}"/>
			
					<Label/><Text/>
					<Label/><Text/>
					<Label/><Text/>
					<Label/><Text/>
					<Label></Label>
					<HBox>
						<Button tooltip="{i18n>PriviousBtn}" press="previosDipalyContactDetails" icon="sap-icon://slim-arrow-left"></Button>
						<Text text="{ContactPersonDisplayModelSet>AddCountNo}"></Text>
						<Button iconFirst="false" tooltip="{i18n>NextBtn}" press="nextDisplayContactDetails" icon="sap-icon://slim-arrow-right"></Button>
					</HBox>
				</f:content>
			</f:SimpleForm>
		</VBox>
	</Panel>
</core:FragmentDefinition>