<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Advanced Search" class="sapUiSizeCompact">
		<Table >
			<columns>
				<Column>
					<Text text="{i18n>Criteria}"/>
				</Column>
				<Column>
					<Text text="{i18n>Value}"/>
				</Column>
			</columns>
			<items >
				<ColumnListItem Press="onTablePress1">
					<cells>
						<Text text="{i18n>GoldenRecordID}"/>
						<Input value="{searchAndAdvancedSearchModelSet>/AdvancedSearch/GoldenRecordID}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem>
					<cells>
						<Text text="{i18n>AccountName}"/>
						<Input value="{searchAndAdvancedSearchModelSet>/AdvancedSearch/AccountName}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem>
					<cells>
						<Text text="{i18n>Street}"/>
						<Input value="{searchAndAdvancedSearchModelSet>/AdvancedSearch/Steet}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Text text="{i18n>City}"/>
						<Input value="{searchAndAdvancedSearchModelSet>/AdvancedSearch/City}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem>
					<cells>
						<Text text="{i18n>PostalCode}"/>
						<Input value="{searchAndAdvancedSearchModelSet>/AdvancedSearch/PostalCode}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Text text="{i18n>Country}"/>
						<ComboBox width = "100%"
							value="{searchAndAdvancedSearchModelSet>/AdvancedSearch/CountryDesc}"
							change="onSelectCountryAddressAndName" valueStateText="{CreateModelSet>CountryMessage}" valueState="{CreateModelSet>CountryState}"
							items="{CountryComboSet>/results}" selectedKey="{searchAndAdvancedSearchModelSet>/AdvancedSearch/Country}" placeholder="{i18n>select} {i18n>Country}">
							<core:Item key="{CountryComboSet>code}" text="{CountryComboSet>englishShortName}"/>
						</ComboBox>
					</cells>
				</ColumnListItem>
					<ColumnListItem>
					<cells>
						<Text text="{i18n>Region}"/>
						<ComboBox width = "100%"
							value="{searchAndAdvancedSearchModelSet>/AdvancedSearch/RegionDesc}"
							selectedKey="{searchAndAdvancedSearchModelSet>/AdvancedSearch/Region}" items="{RegionBasedCountryComboSet>/results}" placeholder="{i18n>select} {i18n>Region}"
							valueStateText="{CreateModelSet>RegionMessage}" valueState="{CreateModelSet>RegionState}" change="liveChnageNameAddressRegion">
							<core:Item key="{RegionBasedCountryComboSet>cntrySubdivCode}" text="{RegionBasedCountryComboSet>cntrySubdivName}"/>
						</ComboBox>
					</cells>
				</ColumnListItem>
				<ColumnListItem>
					<cells>
						<Text text="{i18n>VATNumber}"/>
						<Input value="{searchAndAdvancedSearchModelSet>/AdvancedSearch/VATNumber}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem>
					<cells>
						<Text text="{i18n>TaxNumber1}"/>
						<Input value="{searchAndAdvancedSearchModelSet>/AdvancedSearch/TaxNumber1}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Text text="{i18n>POBox}"/>
						<Input value="{searchAndAdvancedSearchModelSet>/AdvancedSearch/POBox}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem>
					<cells>
						<Text text="{i18n>POBoxPostalCode}"/>
						<Input value="{searchAndAdvancedSearchModelSet>/AdvancedSearch/POBoxPostalCode}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem>
					<cells>
						<Text text="{i18n>LocalID}"/>
						<Input value="{searchAndAdvancedSearchModelSet>/AdvancedSearch/LocalID}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem>
					<cells>
						<Text text="{i18n>System}"/>
							<ComboBox width = "100%" showValueStateMessage="false" valueState="{HeaderModelSet>/SystemValState}" change="liveChangeSystem"
							selectedKey="{searchAndAdvancedSearchModelSet>/AdvancedSearch/System}" items="{AdvSearchSystemModelSet>/results}" enabled="{HeaderModelSet>/SystemEnable}" textAlign="Left" placeholder="{i18n>enter} {i18n>System}">
								<core:Item key="{AdvSearchSystemModelSet>logicalCompId}" text="{AdvSearchSystemModelSet>logicalCompId}"/>
						</ComboBox>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<buttons>
			<Button text="Search" press="onPressAdvancedSearchSearchButton"/>
			<Button text="Close" press="onPressAdvancedSearchCloseButton"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>