<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:tnt="sap.tnt">
	<Panel expandable="true" expanded="{PanelModelSet>/DeletionFlagPanel}" visible="{StatusDataTabModel>/StatusData/DeletionBlock}">
		<headerToolbar>
			<OverflowToolbar>
				<Label text="{i18n>DeletionFlag}" design="Bold"/>
			</OverflowToolbar>
		</headerToolbar>
		<f:SimpleForm  editable="true" layout="ResponsiveGridLayout" labelSpanL="5" labelSpanM="8" labelSpanS="6"
			 emptySpanL="0" emptySpanM="0" columnsL="3" columnsM="3">
			<f:content>
				<core:Title/>
				<Label textAlign="Left" text="{i18n>DeletionFlagGeneric}"
					required="{path:'RequiredOptionalSet>/DelFlagGenCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<CheckBox width="10%" selected="{StatusDetailsSet>/DeletionFlag/DeletionFlagGeneric}"
					enabled="{path:'RequiredOptionalSet>/DelFlagGenCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					valueState="{StatusDetailsSet>/DeletionFlag/DeletionFlagGenericState}"
					tooltip="{StatusDetailsSet>/DeletionFlag/DeletionFlagGenericTooltip}"/>
				<core:Title/>
				<Label textAlign="Left" text="{i18n>DeletionFlagAccounting}"
					required="{path:'RequiredOptionalSet>/DelFlagAccCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<CheckBox width="10%" selected="{StatusDetailsSet>/DeletionFlag/DeletionFlagAccounting}"
					enabled="{path:'RequiredOptionalSet>/DelFlagAccCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					valueState="{StatusDetailsSet>/DeletionFlag/DeletionFlagAccountingState}"
					tooltip="{StatusDetailsSet>/DeletionFlag/DeletionFlagAccountingTooltip}"/>
				<core:Title/>
				<Label textAlign="Left" text="{i18n>DeletionFlagSales}"
					required="{path:'RequiredOptionalSet>/DelFlagSalesCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<CheckBox width="10%" selected="{StatusDetailsSet>/DeletionFlag/DeletionFlagSales}"
					enabled="{path:'RequiredOptionalSet>/DelFlagSalesCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					valueState="{StatusDetailsSet>/DeletionFlag/DeletionFlagSalesState}"
					tooltip="{StatusDetailsSet>/DeletionFlag/DeletionFlagSalesTooltip}"/>
				<core:Title/>
			</f:content>
		</f:SimpleForm>
	</Panel>
</core:FragmentDefinition>