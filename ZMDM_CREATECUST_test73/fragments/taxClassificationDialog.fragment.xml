<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog contentWidth="70%" title="{i18n>TaxClassifications} " class="sapUiSizeCompact">
		<Table enableBusyIndicator="false" items="{TaxClassificationComboSet>/results/d/results}">
			<columns>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Country}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>CountryName}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>TaxCategory}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Name}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>TaxClassification}" 	required="{path:'RequiredOptionalSet>/TaxClassiSLDCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<Input value="{TaxClassificationComboSet>Cuntry}" editable="false" ></Input>
					<Input value="{TaxClassificationComboSet>CountryName}" editable="false"></Input>
					<Input value="{TaxClassificationComboSet>Taxcategory}" editable="false"></Input>
					<Input value="{TaxClassificationComboSet>Taxname}" editable="false"></Input>
					<!--<Input value="{TaxClassificationComboSet>test4}"></Input>-->
					<ComboBox items="{TaxClassificationComboSet>NavTaxClassification/results}" 
					enabled="{path:'RequiredOptionalSet>/TaxClassiSLDCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					valueState="{TaxClassificationComboSet>TaxClassficationState}"
					valueStateText="{TaxClassificationComboSet>TaxClassficationMessage}"
					change="onChangTaxustomerClassification"
					selectedKey="{TaxClassificationComboSet>Taxclassification}"
					tooltip="{TaxClassificationComboSet>TaxClassficationTooltip}">
						<core:Item key="{TaxClassificationComboSet>Taxclassification}" 
							text="{TaxClassificationComboSet>Taxclassification} -{TaxClassificationComboSet>Taxclassname}"/>
					</ComboBox>
				</ColumnListItem>
			</items>
		</Table>
		<buttons>
			<Button text="{i18n>OK}" tooltip="{i18n>OK}" press="onPressTaxClassificationFragOk"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>