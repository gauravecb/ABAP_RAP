<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog contentWidth="70%" title="{i18n>additionalTelephone} " class="sapUiSizeCompact">
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" labelSpanS="6" adjustLabelSpan="false"
			emptySpanL="1" emptySpanM="1" columnsL="3" columnsM="3">
			<f:content>
				<core:Title/>
				<Label text="{i18n>Telephone}" required="{path:'RequiredOptionalSet>/TelephoneCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Input enabled="{path:'RequiredOptionalSet>/TelephoneCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}" type="Tel"
					value="{ContactDetailsSet>/ContactDetails/Telephone/TelephoneFrag}" liveChange="liveChangeTelephoneValueFrag"
					valueState="{ContactDetailsSet>/ContactDetails/Telephone/TelephoneValueState}" valueStateText="{i18n>enterValidTelephoneNumber}"></Input>
				<core:Title/>
				<Label text="{i18n>Extension}" required="{path:'RequiredOptionalSet>/TeleExtCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Input maxLength="24" enabled="{path:'RequiredOptionalSet>/TeleExtCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}" type="Tel"
					value="{ContactDetailsSet>/ContactDetails/Telephone/ExtensionFrag}" liveChange="liveChangeTelephoneExtenValueFrag"
					valueState="{ContactDetailsSet>/ContactDetails/Telephone/TelephoneExtensionValueState}" valueStateText="{i18n>enterValidTelephoneExtension}"></Input>
				<core:Title/>
				<Label text="{i18n>Comments}"
					required="{path:'RequiredOptionalSet>/TeleCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Input maxLength="20"  enabled="{path:'RequiredOptionalSet>/TeleCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					value="{ContactDetailsSet>/ContactDetails/Telephone/CommentsFrag}"></Input>
			</f:content>
		</f:SimpleForm>
		<Toolbar>
			<ToolbarSpacer></ToolbarSpacer>
			<Button icon="sap-icon://add" press="addTelephoneAddFrag" type="Accept" enabled="{RequiredOptionalSet>/CompContDetEdit}"></Button>
			<Button icon="sap-icon://delete" press="addTelephoneDeleteFrag" type="Reject" enabled="{RequiredOptionalSet>/CompContDetEdit}"></Button>
		</Toolbar>
		<Table select="onSelectTableTelephoneFrag" mode="MultiSelect" enableBusyIndicator="false"
			items="{ContactDetailsSet>/ContactDetails/Telephone/TelephoneList}">
			<columns>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Telephone}" required="{path:'RequiredOptionalSet>/TelephoneCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Extension}" required="{path:'RequiredOptionalSet>/TeleExtCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Comments}"
						required="{path:'RequiredOptionalSet>/TeleCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Default}" required="{path:'RequiredOptionalSet>/DefaultTeltCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem selected="{ContactDetailsSet>Selected}">
					<Input 
					liveChange="liveChangeTelephoneFragTable"
					value="{ContactDetailsSet>Telephone}" valueState="{ContactDetailsSet>TelephoneViewState}"
						valueStateText="{ContactDetailsSet>TelephoneViewMessage}"
						enabled="{path:'RequiredOptionalSet>/TelephoneCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
						tooltip="{ContactDetailsSet>TelephoneTooltip}"></Input>
					<Input maxLength="24"
						liveChange="liveChangeExtenstionFragTable"
					value="{ContactDetailsSet>Extension}" valueState="{ContactDetailsSet>ExtenViewState}"
						valueStateText="{ContactDetailsSet>ExtenViewMessage}"
						enabled="{path:'RequiredOptionalSet>/TeleExtCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
						tooltip="{ContactDetailsSet>ExtenTooltip}"></Input>
					<Input maxLength="20"
					liveChange="liveChangeTeleponeCommentFragTable"
					value="{ContactDetailsSet>Comments}" valueState="{ContactDetailsSet>CommentViewState}"
						valueStateText="{ContactDetailsSet>CommentViewMessage}"
						enabled="{path:'RequiredOptionalSet>/TeleCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
						tooltip="{ContactDetailsSet>CommentTooltip}"></Input>
					<!--<CheckBox selected="{ContactDetailsSet>Default}"></CheckBox>-->
					<RadioButton select="selectDefaultTelephoneDailog" groupName="GroupTelephone" selected="{ContactDetailsSet>Default}" 
						enabled="{path:'RequiredOptionalSet>/DefaultTeltCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"/><!--select="onChooseRadioButtonTelephoneDialog"-->
				</ColumnListItem>
			</items>
		</Table>
		<buttons>
			<Button text="{i18n>OK}" tooltip="{i18n>OK}" press="onPressTelephoneValueFragOk"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>