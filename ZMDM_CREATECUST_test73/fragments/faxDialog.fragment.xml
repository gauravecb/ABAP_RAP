<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog contentWidth="70%" title="{i18n>additionalFax} " class="sapUiSizeCompact">
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" labelSpanS="6" adjustLabelSpan="false"
			emptySpanL="1" emptySpanM="1" columnsL="3" columnsM="3">
			<f:content>
				<core:Title/>
				<Label text="{i18n>Fax}" required="{path:'RequiredOptionalSet>/FaxCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Input maxLength="20" enabled="{path:'RequiredOptionalSet>/FaxCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}" type="Tel"
					value="{ContactDetailsSet>/ContactDetails/Fax/FaxFrag}" change="onFaxChange" liveChange="onLiveChangeOfFaxView"
					valueState="{ContactDetailsSet>/ContactDetails/Fax/FaxValueState}" valueStateText="{i18n>enterValidFaxNumber}"></Input>
				<core:Title/>
				<Label text="{i18n>Extension}" required="{path:'RequiredOptionalSet>/FaxExtCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Input maxLength="24" enabled="{path:'RequiredOptionalSet>/FaxExtCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}" type="Tel"
					value="{ContactDetailsSet>/ContactDetails/Fax/ExtensionFrag}" liveChange="liveChangeFaxValueFrag"
					valueState="{ContactDetailsSet>/ContactDetails/Fax/FaxExtensionValueState}" valueStateText="{i18n>enterValidFaxExtension}"></Input>
				<core:Title/>
				<Label text="{i18n>Comments}" required="{path:'RequiredOptionalSet>/FaxCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Input maxLength="20" enabled="{path:'RequiredOptionalSet>/FaxCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					value="{ContactDetailsSet>/ContactDetails/Fax/CommentsFrag}"></Input>
			</f:content>
		</f:SimpleForm>
		<Toolbar>
			<ToolbarSpacer></ToolbarSpacer>
			<Button icon="sap-icon://add" press="addFaxAddFrag" type="Accept" enabled="{RequiredOptionalSet>/CompContDetEdit}"></Button>
			<Button icon="sap-icon://delete" press="addFaxDeleteFrag" type="Reject" enabled="{RequiredOptionalSet>/CompContDetEdit}"></Button>
		</Toolbar>
		<Table select="onSelectTableFaxFrag" mode="MultiSelect" enableBusyIndicator="false" items="{ContactDetailsSet>/ContactDetails/Fax/FaxList}">
			<columns>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Fax}" required="{path:'RequiredOptionalSet>/FaxCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Extension}" required="{path:'RequiredOptionalSet>/FaxExtCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Comments}" required="{path:'RequiredOptionalSet>/FaxCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Default}" required="{path:'RequiredOptionalSet>/FaxDefaultCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem selected="{ContactDetailsSet>Selected}">
					<Input maxLength="24" liveChange="liveChangeFaxFragTable" value="{ContactDetailsSet>Fax}" valueState="{ContactDetailsSet>FaxViewState}"
						valueStateText="{ContactDetailsSet>FaxViewMessage}"
						enabled="{path:'RequiredOptionalSet>/FaxCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
						tooltip="{ContactDetailsSet>FaxTooltip}"></Input>
					<Input maxLength="24" liveChange="liveChangeFaxExtenstionFragTable" value="{ContactDetailsSet>Extension}" valueState="{ContactDetailsSet>ExtenViewState}"
						valueStateText="{ContactDetailsSet>ExtenViewMessage}"
						enabled="{path:'RequiredOptionalSet>/FaxExtCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
						tooltip="{ContactDetailsSet>ExtenTooltip}"></Input>
					<Input maxLength="20" liveChange="liveChangeFaxCommentFragTable" value="{ContactDetailsSet>Comments}" valueState="{ContactDetailsSet>CommentViewState}"
						valueStateText="{ContactDetailsSet>CommentViewMessage}"
						enabled="{path:'RequiredOptionalSet>/FaxCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
						tooltip="{ContactDetailsSet>CommentTooltip}"></Input>
					<!--<CheckBox selected="{ContactDetailsSet>Default}"></CheckBox>-->
					<!--	select="onChooseRadioButtonFaxDialog"-->
					<RadioButton select="selectDefaultFaxDailog" groupName="GroupFax" selected="{ContactDetailsSet>Default}"
					
						enabled="{path:'RequiredOptionalSet>/FaxDefaultCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"/>
				</ColumnListItem>
			</items>
		</Table>
		<buttons>
			<Button text="{i18n>OK}" tooltip="{i18n>OK}" press="onPressFaxValueFragOk"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>