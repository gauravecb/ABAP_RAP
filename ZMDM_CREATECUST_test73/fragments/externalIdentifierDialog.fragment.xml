<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog contentWidth="70%" title="{i18n>additionalIdentifiers} " class="sapUiSizeCompact">
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" labelSpanS="6" adjustLabelSpan="false"
			emptySpanL="1" emptySpanM="1" columnsL="2" columnsM="2">
			<f:content>
				<core:Title/>
				<Label text="{i18n>ExternalIdentifierType}"
					required="{path:'RequiredOptionalSet>/ExternlTypeCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<ComboBox enabled="{path:'RequiredOptionalSet>/ExternlTypeCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					items="{externalIdentifierSet>/ExtIdentifier}" change="liveChangeExternalIdentTypeFrag"
					selectedKey="{CreateModelSet>/ExternalIdentifer/ExterIdtType}" placeholder="{i18n>select} {i18n>ExternalIdentType}"
					valueState="{CreateModelSet>/ExternalIdentifer/ExternalTypeState}" valueStateText="{i18n>enterExternalIdentifierType}">
					<core:Item key="{externalIdentifierSet>rowidObject}" text="{externalIdentifierSet>type}"/>
				</ComboBox>
				<core:Title/>
				<Label text="{i18n>ExternalIdentifierValue}"
					required="{path:'RequiredOptionalSet>/ExternlValueCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Input maxLength="128" enabled="{path:'RequiredOptionalSet>/ExternlValueCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					value="{CreateModelSet>/ExternalIdentifer/ExtIdntValue}" liveChange="liveChangeExternalIdentTypeValueFrag"
					valueState="{CreateModelSet>/ExternalIdentifer/ExternalTypeValueState}" valueStateText="{i18n>enterExternalIdentifierValue}"></Input>
			</f:content>
		</f:SimpleForm>
		<Toolbar>
			<ToolbarSpacer></ToolbarSpacer>
			<Button icon="sap-icon://add" press="addExternalIdentifirTypeAddFrag" type="Accept" enabled="{RequiredOptionalSet>/ExternIdentEdit}"></Button>
			<Button icon="sap-icon://delete" press="addExternalIdentifirTypeDeleteFrag" type="Reject" enabled="{RequiredOptionalSet>/ExternIdentEdit}"></Button>
		</Toolbar>
		<Table select="onSelectTableExternalIdentFrag" mode="MultiSelect" enableBusyIndicator="false"
			items="{CreateModelSet>/ExternalIdentifer/ExternalIdenitir}">
			<columns>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Text text="{i18n>ExternalIdentifierType}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Text text="{i18n>ExternalIdentifierValue}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem selected="{CreateModelSet>Selected}">
					<!--<Text text="{CreateModelSet>ExterIdtTypeDesc}"></Text>-->
					<!--<Text text="{CreateModelSet>ExtIdntValue}"></Text>-->
					<Input value="{CreateModelSet>ExterIdtTypeDesc}" valueState="{CreateModelSet>ExterIdtTypeDescState}" enabled="false"
						tooltip="{CreateModelSet>ExterIdtTypeDescTooltip}"></Input>
					<Input value="{CreateModelSet>ExtIdntValue}" valueState="{CreateModelSet>ExtIdntValueState}" enabled="false"
						tooltip="{CreateModelSet>ExtIdntValueTooltip}"></Input>
				</ColumnListItem>
			</items>
		</Table>
		<buttons>
			<Button text="{i18n>OK}" tooltip="{i18n>OK}" press="onPressExtIdentifierTypeValueFragOk"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>