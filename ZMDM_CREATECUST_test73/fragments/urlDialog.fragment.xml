<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog contentWidth="60%" title="{i18n>additionalURL} " class="sapUiSizeCompact">
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" labelSpanS="6" adjustLabelSpan="false"
			emptySpanL="1" emptySpanM="1" columnsL="2" columnsM="2">
			<f:content>
				<core:Title/>
				<Label text="{i18n>URL}" required="{path:'RequiredOptionalSet>/URLCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Input maxLength="40" enabled="{path:'RequiredOptionalSet>/URLCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					value="{ContactDetailsSet>/ContactDetails/URL/URLFrag}" liveChange="liveChangeURLFrag"
					valueState="{ContactDetailsSet>/ContactDetails/URL/URLValueState}" valueStateText="{i18n>enterValidURLNumber}"></Input>
				<core:Title/>
				<Label text="{i18n>Comments}" required="{path:'RequiredOptionalSet>/URLCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Input maxLength="20" enabled="{path:'RequiredOptionalSet>/URLCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					value="{ContactDetailsSet>/ContactDetails/URL/CommentsFrag}"></Input>
			</f:content>
		</f:SimpleForm>
		<Toolbar>
			<ToolbarSpacer></ToolbarSpacer>
			<Button icon="sap-icon://add" press="addURLAddFrag" type="Accept" enabled="{RequiredOptionalSet>/CompContDetEdit}"></Button>
			<Button icon="sap-icon://delete" press="addURLDeleteFrag" type="Reject" enabled="{RequiredOptionalSet>/CompContDetEdit}"></Button>
		</Toolbar>
		<Table select="onSelectTableURLFrag" mode="MultiSelect" enableBusyIndicator="false" items="{ContactDetailsSet>/ContactDetails/URL/URLList}">
			<columns>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>URL}" required="{path:'RequiredOptionalSet>/URLCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Comments}" required="{path:'RequiredOptionalSet>/URLCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Default}" required="{path:'RequiredOptionalSet>/URLDefaultCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem selected="{ContactDetailsSet>Selected}">
					<Input maxLength="40" liveChange="liveChangeURLFRag" value="{ContactDetailsSet>URL}" valueState="{ContactDetailsSet>UrlViewState}"
						valueStateText="{ContactDetailsSet>UrlViewMessage}"
						enabled="{path:'RequiredOptionalSet>/URLCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
						tooltip="{ContactDetailsSet>UrlTooltip}"></Input>
					<Input maxLength="20" liveChange="liveChangeURLCommentFRag" value="{ContactDetailsSet>Comments}"
						valueState="{ContactDetailsSet>CommentViewState}" valueStateText="{ContactDetailsSet>CommentViewMessage}"
						enabled="{path:'RequiredOptionalSet>/URLCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
						tooltip="{ContactDetailsSet>CommentTooltip}"></Input>
					<!--<CheckBox selected="{ContactDetailsSet>Default}"></CheckBox>-->
					<RadioButton select="selectGrpouDeualtUrlFrag" groupName="GroupURL" selected="{ContactDetailsSet>Default}"
						enabled="{path:'RequiredOptionalSet>/URLDefaultCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"/><!--select="onChooseRadioButtonURLDialog"--></ColumnListItem>
			</items>
		</Table>
		<buttons>
			<Button text="{i18n>OK}" tooltip="{i18n>OK}" press="onPressURLValueFragOk"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>