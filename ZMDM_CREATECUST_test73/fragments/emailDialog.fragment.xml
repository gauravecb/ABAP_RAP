<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog contentWidth="60%" title="{i18n>additionalEmail} " class="sapUiSizeCompact">
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" labelSpanS="6" adjustLabelSpan="false"
			emptySpanL="1" emptySpanM="1" columnsL="2" columnsM="2">
			<f:content>
				<core:Title/>
				<Label text="{i18n>Email}" required="{path:'RequiredOptionalSet>/EmailCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Input maxLength="130" enabled="{path:'RequiredOptionalSet>/EmailCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}" type="Email"
					value="{ContactDetailsSet>/ContactDetails/Email/EmailFrag}" liveChange="liveChangeURLEmailFRag"
					valueState="{ContactDetailsSet>/ContactDetails/Email/EmailFragValueState}"
					valueStateText="{ContactDetailsSet>/ContactDetails/Email/EmailFragValueStateText}"></Input>
				<core:Title/>
				<Label text="{i18n>Comments}"
					required="{path:'RequiredOptionalSet>/EmailCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Input maxLength="20" enabled="{path:'RequiredOptionalSet>/EmailCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					value="{ContactDetailsSet>/ContactDetails/Email/CommentsFrag}"></Input>
			</f:content>
		</f:SimpleForm>
		<Toolbar>
			<ToolbarSpacer></ToolbarSpacer>
			<Button icon="sap-icon://add" press="addEmailAddFrag" type="Accept" enabled="{RequiredOptionalSet>/CompContDetEdit}"></Button>
			<Button icon="sap-icon://delete" press="addEmailDeleteFrag" type="Reject" enabled="{RequiredOptionalSet>/CompContDetEdit}"></Button>
		</Toolbar>
		<Table select="onSelectTableEmailFrag" mode="MultiSelect" enableBusyIndicator="false" items="{ContactDetailsSet>/ContactDetails/Email/EmailList}">
			<columns>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Email}" required="{path:'RequiredOptionalSet>/EmailCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Comments}"
						required="{path:'RequiredOptionalSet>/EmailCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
				<Column demandPopin="true" minScreenWidth="Tablet">
					<Label text="{i18n>Default}"
						required="{path:'RequiredOptionalSet>/EmailDefaultCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem selected="{ContactDetailsSet>Selected}">
					<!--<Input value="{ContactDetailsSet>Email}" type="Email"  liveChange="liveChangeTelephoneValueFrag" -->
					<!--valueState="{ContactDetailsSet>EmailValueState}" valueStateText="{ContactDetailsSet>EmailValueStateText}"></Input>-->
					<Text text="{ContactDetailsSet>Email}" valueState="{ContactDetailsSet>EmailValueState}"
						valueStateText="{ContactDetailsSet>EmailViewMessage}"
						enabled="{path:'RequiredOptionalSet>/EmailCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
							tooltip="{ContactDetailsSet>EmailTooltip}"></Text>
					<Input maxLength="20" liveChange="liveChnageEmailComentFrag" value="{ContactDetailsSet>Comments}" valueState="{ContactDetailsSet>CommentViewState}"
						valueStateText="{ContactDetailsSet>CommentViewMessage}"
						enabled="{path:'RequiredOptionalSet>/EmailCommentCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
						tooltip="{ContactDetailsSet>CommentTooltip}"></Input>
					<!--<CheckBox selected="{ContactDetailsSet>Default}"></CheckBox>-->
					<RadioButton select="selectEmailDefaultFrag" groupName="GroupEmail" selected="{ContactDetailsSet>Default}"
						enabled="{path:'RequiredOptionalSet>/EmailDefaultCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
						/><!--select="onChooseRadioButtonEmailDialog"-->
				</ColumnListItem>
			</items>
		</Table>
		<buttons>
			<Button text="{i18n>OK}" tooltip="{i18n>OK}" press="onPressEmailValueFragOk"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>