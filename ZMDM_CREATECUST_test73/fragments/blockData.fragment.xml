<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:tnt="sap.tnt">
	<Panel expandable="true" expanded="{PanelModelSet>/BlockDataPanel}">
		<headerToolbar>
			<OverflowToolbar>
				<Label text="{i18n>BlockData}" design="Bold"/>
			</OverflowToolbar>
		</headerToolbar>
		<f:SimpleForm class="customClassTitle" editable="true" layout="ResponsiveGridLayout" labelSpanL="5" labelSpanM="8"
			labelSpanS="6" adjustLabelSpan="false" emptySpanL="0" emptySpanM="0" columnsL="3" columnsM="3">
			<f:content>
				<core:Title/>
				<Label textAlign="Left" text="{i18n>PostingBlock}"
					required="{path:'RequiredOptionalSet>/PostingBlockCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Checkbox width="10%" valueState="{StatusDetailsSet>/BlockData/PostingBlockSate}" valueStateText="{StatusDetailsSet>/BlockData/PostingBlockMessage}"
					enabled="{path:'RequiredOptionalSet>/PostingBlockCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					selected="{StatusDetailsSet>/BlockData/PostingBlock}" select="onSelectPostingBlock"/>
				<Label textAlign="Left" text="{i18n>OrderBlock}"
					required="{path:'RequiredOptionalSet>/OrderBlockCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<ComboBox change="changeOrderBlockState" valueState="{StatusDetailsSet>/BlockData/OrderBlockState}" valueStateText="{StatusDetailsSet>/BlockData/OrderBlockMessage}"
					enabled="{path:'RequiredOptionalSet>/OrderBlockCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					items="{OrderBlockSDComboSet>/results}" selectedKey="{StatusDetailsSet>/BlockData/OrderBlock}"
					placeholder="{i18n>select} {i18n>OrderBlock}" tooltip="{StatusDetailsSet>/BlockData/OrderBlockTooltip}">
					<core:Item key="{OrderBlockSDComboSet>Aufsp}" text="{OrderBlockSDComboSet>Aufsp}-{OrderBlockSDComboSet>Vtext}"/>
				</ComboBox>
				<Label textAlign="Left" text="{i18n>DeliveryBlock }"
					required="{path:'RequiredOptionalSet>/DeliveryBlockCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<ComboBox change="changeDeliveryBlokState" valueState="{StatusDetailsSet>/BlockData/DeliveryBlockState}" valueStateText="{StatusDetailsSet>/BlockData/DeliveryBlockMessage}"
					enabled="{path:'RequiredOptionalSet>/DeliveryBlockCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					items="{DeliveryBlockSDComboSet>/results}" selectedKey="{StatusDetailsSet>/BlockData/DeliveryBlock}"
					placeholder="{i18n>select} {i18n>DeliveryBlock}" tooltip="{StatusDetailsSet>/BlockData/DeliveryBlockTooltip}">
					<core:Item key="{DeliveryBlockSDComboSet>Lifsp}" text="{DeliveryBlockSDComboSet>Lifsp}-{DeliveryBlockSDComboSet>Vtext}"/>
				</ComboBox>
				<Label textAlign="Left" text="{i18n>BillingBlock}"
					required="{path:'RequiredOptionalSet>/BillngBlockCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<ComboBox change="changeBillingBlokState" valueState="{StatusDetailsSet>/BlockData/BillingBlockState}" valueStateText="{StatusDetailsSet>/BlockData/BillingBlockMessage}"
					enabled="{path:'RequiredOptionalSet>/BillngBlockCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					items="{BillingBlockSDComboSet>/results}" selectedKey="{StatusDetailsSet>/BlockData/BillingBlock}"
					placeholder="{i18n>select} {i18n>BillingBlock}" tooltip="{StatusDetailsSet>/BlockData/BillingBlockTooltip}">
					<core:Item key="{BillingBlockSDComboSet>Faksp}" text="{BillingBlockSDComboSet>Faksp}-{BillingBlockSDComboSet>Vtext}"/>
				</ComboBox>
				<Label textAlign="Left" text="{i18n>BlockSalesSupport}"
					required="{path:'RequiredOptionalSet>/BlockSalesSupportCond',formatter:'MDMZCUSTOMER.model.Formatter.requiredLabel'}"/>
				<Checkbox width="10%" valueState="{StatusDetailsSet>/BlockData/BlockSalesReportState}"
					valueStateText="{StatusDetailsSet>/BlockData/BlockSalesReportMessage}"
					select="onSelectBlockSalesSupport"
					enabled="{path:'RequiredOptionalSet>/BlockSalesSupportCond',formatter:'MDMZCUSTOMER.model.Formatter.optionalDisabled'}"
					selected="{StatusDetailsSet>/BlockData/BlockSalesReport}"/>
				<core:Title/>
				<core:Title/>
			</f:content>
		</f:SimpleForm>
	</Panel>
</core:FragmentDefinition>