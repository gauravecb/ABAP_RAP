<core:FragmentDefinition xmlns="sap.m" xmlns:u="sap.ui.table" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog title="{i18n>submitHeadingComment}" class="sapUiSizeCompact">
		<content>
			<f:SimpleForm >
				<f:content>
					<TextArea width="100%" rows="5" value="{CommentSubmitModelSet>/Comment}" liveChange="liveChangeCommentSubmit"
					valueState="{CommentSubmitModelSet>/CommentState}" valueStateText="{i18n>RejectionReason}"></TextArea>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="{i18n>submit}" press="processIdgenration" tooltip="{i18n>submit}"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>Cancel}" press="submitFinalCancel" tooltip="{i18n>Cancel}"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>