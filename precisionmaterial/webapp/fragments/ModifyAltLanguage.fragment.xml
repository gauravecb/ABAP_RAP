<core:FragmentDefinition xmlns="sap.m" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog id="idAltLanguageDialog" title="Alternate Material Description">
		<content>
			<smartForm:SmartForm id="idAltLanguage" app:defaultCheckBoxDisplayBehaviour="OnOff" app:defaultDropDownDisplayBehaviour="idAndDescription"
				editable="true">
				<smartForm:layout>
					<smartForm:ColumnLayout columnsM="2" columnsL="2" columnsXL="2"/>
				</smartForm:layout>
				<smartForm:Group>
					<smartForm:GroupElement>
						<smartForm:elements>
							<smartField:SmartField value="{LanguageId}" editable="true" textLabel="Language ID">
								<smartField:configuration>
									<smartField:Configuration preventInitialDataFetchInValueHelpDialog="false"></smartField:Configuration>
								</smartField:configuration>
							</smartField:SmartField>
							<smartField:SmartField value="{LanguageDesc}" editable="true" textLabel="Language Description">
								<smartField:configuration>
									<smartField:Configuration preventInitialDataFetchInValueHelpDialog="false"></smartField:Configuration>
								</smartField:configuration>
							</smartField:SmartField>
						</smartForm:elements>
					</smartForm:GroupElement>
				</smartForm:Group>
			</smartForm:SmartForm>
		</content>
		<buttons>
			<Button text="Save" icon="sap-icon://save" press="handleSaveAltLanguage"></Button>
			<Button text="Cancel" icon="sap-icon://cancel" press="handleDiscardAltLanguage"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>