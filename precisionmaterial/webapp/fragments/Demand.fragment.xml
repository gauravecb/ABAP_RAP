<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:f="sap.ui.layout.form">
	<smartForm:SmartForm id="idDemand" app:defaultCheckBoxDisplayBehaviour="OnOff" app:defaultDropDownDisplayBehaviour="idAndDescription"
		editable="true">
		<smartForm:layout>
			<smartForm:ColumnLayout columnsM="2" columnsL="2" columnsXL="2"/>
		</smartForm:layout>
		<smartForm:Group>
			<smartForm:GroupElement>
				<smartForm:elements>
					<smartField:SmartField value="{BasicMaterial}" editable="true" textLabel="Basic Material">
						<smartField:configuration>
							<smartField:Configuration preventInitialDataFetchInValueHelpDialog="false"></smartField:Configuration>
						</smartField:configuration>
					</smartField:SmartField>
					<Text text=""></Text>
				</smartForm:elements>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartForm:elements>
					<smartField:SmartField value="{DPPCValue}" editable="true" textLabel="DP Product Class" change="handleChangeProductClass">
						<smartField:configuration>
							<smartField:Configuration preventInitialDataFetchInValueHelpDialog="false"></smartField:Configuration>
						</smartField:configuration>
					</smartField:SmartField>
					<Text text="{DPPCDescription}"></Text>
				</smartForm:elements>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartForm:elements>
					<smartField:SmartField value="{PBValue}" editable="true" textLabel="Planning Business" change="handleChangePlanningBusiness">
						<smartField:configuration>
							<smartField:Configuration preventInitialDataFetchInValueHelpDialog="false"></smartField:Configuration>
						</smartField:configuration>
					</smartField:SmartField>
					<Text text="{PBDescription}"></Text>
				</smartForm:elements>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartForm:elements>
					<smartField:SmartField value="{PieceCount}" editable="true" textLabel="Piece Count">
						<smartField:configuration>
							<smartField:Configuration preventInitialDataFetchInValueHelpDialog="false"></smartField:Configuration>
						</smartField:configuration>
					</smartField:SmartField>
					<Text text=""></Text>
				</smartForm:elements>
			</smartForm:GroupElement>
		</smartForm:Group>
	</smartForm:SmartForm>
</core:FragmentDefinition>