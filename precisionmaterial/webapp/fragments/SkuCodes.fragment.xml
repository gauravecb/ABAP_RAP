<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:f="sap.ui.layout.form" xmlns:layout="sap.ui.layout">
	<layout:VerticalLayout>
		<f:SimpleForm layout="ResponsiveGridLayout">
			<f:content>
				<MultiInput id="idSkuCodeInput" change="handleTokenChange" placeholder="Enter the SKU code(s) separated by comma (,)" showValueHelp="false">
					<layoutData>
						<layout:GridData span="XL4 L4 M6 S12"/>
					</layoutData>
				</MultiInput>
				<Button text="Add SKU Code" press="handleAddSkuCodes">
					<layoutData>
						<layout:GridData span="XL1 L2 M4 S6"/>
					</layoutData>
				</Button>
			</f:content>
		</f:SimpleForm>
		<Table id="idSkuCodesTable" mode="Delete" items="{ path: '' }" delete="handleSKUDelete">
			<headerToolbar>
				<OverflowToolbar>
					<Title text="SKU Codes"></Title>
					<ToolbarSpacer/>
					<Button icon="sap-icon://excel-attachment" press="handleSKUCodes" tooltip="Export to Spreadsheet"></Button>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column>
					<header>
						<Text text="SKU Code">
							<customData>
								<core:CustomData key="SKUCode"></core:CustomData>
							</customData>
						</Text>
					</header>
				</Column>
				<Column>
					<header>
						<Text text="User">
							<customData>
								<core:CustomData key="UserId"></core:CustomData>
								<core:CustomData key="UserName"></core:CustomData>
							</customData>
						</Text>
					</header>
				</Column>
				<Column>
					<header>
						<Text text="Date">
							<customData>
								<core:CustomData key="Date"></core:CustomData>
							</customData>
						</Text>
					</header>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{SKUCode}"></Text>
						<Text text="{UserId}-{UserName}"></Text>
						<Text text="{ path: 'Date', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MM/dd/yyyy hh:mm:ss' } }"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</layout:VerticalLayout>
</core:FragmentDefinition>