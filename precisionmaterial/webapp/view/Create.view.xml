<mvc:View controllerName="ui.newell.PrecisionMaterial.controller.Create" displayBlock="true" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:uxap="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:f="sap.f">
	<App>
		<pages>
			<f:DynamicPage id="idCreateMaterial" showFooter="true">
				<f:title>
					<f:DynamicPageTitle>
						<f:heading>
							<Title text="Precision Material - Create"/>
						</f:heading>
					</f:DynamicPageTitle>
				</f:title>
				<f:header>
					<f:DynamicPageHeader pinnable="true">
						<layout:HorizontalLayout allowWrapping="true" class="sapUiContentPadding">
							<layout:VerticalLayout class="sapUiLargeMarginEnd">
								<ObjectAttribute title="MCRID"/>
								<ObjectStatus text="{RequestId}"/>
							</layout:VerticalLayout>
							<layout:VerticalLayout class="sapUiLargeMarginEnd">
								<ObjectAttribute title="Request Type"/>
								<ObjectStatus text="{RequestType} {RequestTypeDesc}" state="Success"/>
							</layout:VerticalLayout>
							<layout:VerticalLayout class="sapUiLargeMarginEnd">
								<ObjectAttribute title="Request Date"/>
								<ObjectStatus text="{CreatedAT}"/>
							</layout:VerticalLayout>
							<layout:VerticalLayout class="sapUiLargeMarginEnd">
								<ObjectAttribute title="No of SKU Lines"/>
								<ObjectStatus text="{NumberOfLineItems}"/>
							</layout:VerticalLayout>
							<layout:VerticalLayout class="sapUiLargeMarginEnd">
								<ObjectAttribute title="Requestor"/>
								<ObjectStatus text="{CreatedByUserName}"/>
							</layout:VerticalLayout>
							<layout:VerticalLayout class="sapUiLargeMarginEnd">
								<ObjectAttribute title="Request Status"/>
								<ObjectStatus text="{RequestStatus}"/>
							</layout:VerticalLayout>
						</layout:HorizontalLayout>
					</f:DynamicPageHeader>
				</f:header>
				<f:content>
					<IconTabBar id="idCreateHeaderTabs" selectedKey="{createView>/selectedTab}" select="handleCreateTabSelect" expandable="false"
						enableTabReordering="true">
						<items>
							<IconTabFilter id="idRequestDetailsSection" icon="sap-icon://request" text="Request Details" key="requestdetail" design="Horizontal"></IconTabFilter>
							<IconTabFilter id="idProductDetailsSection" icon="sap-icon://add-product" text="Product Details" key="productdetail" design="Horizontal"/>
							<!--<IconTabFilter id="idRelatedRequestSection" icon="sap-icon://copy" text="Related Requests" key="relatedrequest" design="Horizontal"/>-->
							<IconTabFilter id="idRelatedRequestSection" icon="sap-icon://copy" text="Related Requests" key="relatedrequest" design="Horizontal"/>
							<IconTabFilter id="idAttachmentSection" icon="sap-icon://attachment" text="Attachments" key="attachments" design="Horizontal"/>
							<IconTabFilter id="idSKUCodesSection" icon="sap-icon://bar-code" text="SKU Codes" key="skucodes" design="Horizontal"/>
							<IconTabFilter id="idCommentsSecton" icon="sap-icon://discussion" text="Comments" key="comments" design="Horizontal"/>
							<IconTabFilter id="idApprovalsSection" icon="sap-icon://employee-approvals" text="Approvals" key="approvals" design="Horizontal"/>
							<IconTabFilter id="idHistorySection" icon="sap-icon://history" text="History" key="history" design="Horizontal"/>
							<IconTabFilter id="idWorkflowRoutingSection" icon="sap-icon://workflow-tasks" text="Workflow" key="workflow" design="Horizontal"/>
							<IconTabFilter id="idPlantSection" icon="sap-icon://workflow-tasks" text="Workflow" key="Plant" design="Horizontal"/>
						</items>
					</IconTabBar>
				</f:content>
				<f:footer>
					<OverflowToolbar>
						<Button id="idMessagePopoverView" icon="sap-icon://alert" text="{= ${message>/}.length }" type="Transparent" press="onMessagePopoverPress"/>
						<ToolbarSpacer/>
						<Button type="Accept" class="sapUiTinyMargin" icon="sap-icon://accept" text="Submit" press="handleSubmit"/>
						<Button type="Default" icon="sap-icon://save" text="Save Request" press="handleSave"/>
						<Button type="Reject" text="Reserve" press="handleReserve"/>
						<Button type="Reject" icon="sap-icon://delete" text="Delete" press="handleDelete"/>
						<Button type="Default" icon="sap-icon://sys-cancel" text="Cancel" press="handleCancel"/>
						<Button id="idBackButton" icon="sap-icon://redo" type="Default" text="Back" visible="{= ${querydata>/fromEmail} === 'YES' ? false : true }"
							press="handleNavBacToWorklist"/>
					</OverflowToolbar>
				</f:footer>
			</f:DynamicPage>
		</pages>
	</App>
</mvc:View>